<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="PxUsage" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg_hover"
        android:layout_margin="5dp"
        android:padding="0dp"
        android:orientation="vertical">
        
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Select Summary : "
	        android:textStyle="bold"
	        android:textColor="@color/black"
	        android:padding="10dp" />
        <View
			android:layout_width="fill_parent"	
			android:layout_height="1px"
			android:background="@drawable/form_sparator" />
        
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_margin="5dp"
	        android:gravity="center_vertical">
	        <TextView 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:text="From Date"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:layout_weight="0.4"/>
	        
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="12 April 2014"
	            android:textStyle="bold"
	            android:textColor="@color/black"
	            android:layout_weight="0.4"/>
	        
	        <Button android:id="@+id/pickFromDate"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/ic_dt_picker"/>
	    </LinearLayout>
	    
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_margin="5dp"
	        android:gravity="center_vertical">
	        <TextView 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:text="To Date"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:layout_weight="0.4"/>
	        
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="15 Mei 2014"
	            android:textStyle="bold"
	            android:textColor="@color/black"
	            android:layout_weight="0.4"/>
	        
	        <Button android:id="@+id/pickFromDate"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/ic_dt_picker"/>
	    </LinearLayout>
	    
        <View
			android:layout_width="fill_parent"	
			android:layout_height="1px"
			android:background="@drawable/form_sparator" />
        
        <Button 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:text="Show"
	        android:textColor="@color/white"
	        android:background="@drawable/green_button_gradient"/>
        
    </LinearLayout>

</LinearLayout>
