<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="PxUsage" >
    
    <FrameLayout
        android:id="@+id/layout_header" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_header_blue"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp" >
        
        <Button 
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back_navigation_selector"
            android:visibility="invisible"/>
        
        <Button 
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginRight="0dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/next_navigation_selector"
            android:visibility="invisible"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash Flow"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </FrameLayout>
    
    <LinearLayout
        android:id="@+id/mainFooterLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer"
        android:orientation="horizontal" >
        
        <LinearLayout 
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="0.25"
            android:background="@drawable/footer_button_selector" >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home_icon"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Home"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/transaction_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="0.25"
            android:background="@drawable/footer_button_selector" >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/transaction_icon"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Transaksi"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/setting_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="0.25"
            android:background="@drawable/footer_button_selector" >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/setting_icon"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Setting"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/logout_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="0.25"
            android:background="@drawable/footer_button_selector" >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/logout_icon"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Logout"/>
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/mainLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_above="@+id/mainFooterLayout"
        android:layout_below="@+id/layout_header">
        
    </LinearLayout>

</RelativeLayout>